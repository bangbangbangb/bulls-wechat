<!--index.wxml-->
<view class="search">
  <icon id="icon" type="search" size="20"></icon>
  <input type="text" placeholder='请输入片名' placeholder-style='height:10px' confirm-type="done"/>
</view>

<!-- 滑片 -->
<view id="swiper">
  <view id="swiper-one">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" 
    interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="355" height="150"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view id="swiper-two">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" 
    interval="{{interval}}" duration="{{duration}}" style='width:355px'>
    <block wx:for="{{swiperName}}">
        <swiper-item>
          <text class="slide-text" width="300">{{item}}</text>
        </swiper-item>
      </block>
    </swiper>
  </view>
</view>


